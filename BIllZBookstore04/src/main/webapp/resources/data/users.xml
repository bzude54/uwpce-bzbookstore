<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="simpleUserManager" class="edu.uwpce.bzude.BZSimpleUserManager">
		<property name="users">
			<map>
				<entry key="100" value-ref="user1" />			
			</map>
		</property>
	
	</bean>

	<bean id="user1" class="edu.uwpce.bzude.BZUserInfo">
		<property name="userName" value="bob" />
		<property name="password" value="pwd" />
		<property name="userId" value="100" />
		<property name="firstName" value="Jim" />
		<property name="lastName" value="Bob" />
		<property name="mailingStreetAddress" value="123 Free" />
		<property name="mailingCity" value="Seattle" />
		<property name="mailingState" value="WA" />
		<property name="mailingZip" value="98100" />
		<property name="shippingStreetAddress" value="345 MLK Blvd" />
		<property name="shippingCity" value="Renton" />
		<property name="shippingState" value="WA" />
		<property name="shippingZip" value="98000" />
		<property name="creditCard1" value="1234567890" />
	</bean>
		
</beans>
