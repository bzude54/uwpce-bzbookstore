<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="simpleUserManager" class="edu.uwpce.bzude.BZSimpleUserManager">
		<property name="users">
			<map>
				<entry key="bob" value-ref="user1" />			
			</map>
		</property>
	
	</bean>

	<bean id="user1" class="edu.uwpce.bzude.BZUserInfo">
		<property name="userName" value="bob" />
		<property name="password" value="pwd" />
		<property name="userId" value="100" />
	</bean>
		
</beans>
